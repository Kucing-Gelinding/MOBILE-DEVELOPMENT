<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cunny" parent="Theme.Material3.Light">
        <item name="android:fontFamily">@font/poppins</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/secondaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/tertiaryColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="button">
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.Cunny" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Background_card">
        <item name="android:background">@drawable/cardview_material</item> <!-- Tetap menggunakan drawable -->
    </style>

    <style name="Background_card_secondary">
        <item name="android:background">@drawable/cardview_material_secondary</item> <!-- Tetap menggunakan drawable -->
    </style>

    <style name="ShapeAppearanceOverlay.App.RoundedFull" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="MyCheckBox"
        parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/tertiaryColor</item>
        <item name="colorControlActivated">@color/tertiaryColor</item>
    </style>
</resources>